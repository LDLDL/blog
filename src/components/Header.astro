---
import { GITHUB_URL, SITE_TITLE } from '../consts';
---

<header id="header">
    <nav>
        <h2><a href="/">{SITE_TITLE}</a></h2>
        <div class="links">
            <a href={GITHUB_URL} title="Github URL">
                <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" viewBox="0 -2 26 26" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"></path>
                </svg>
            </a>
            <a href="/search" title="Search">
                <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" viewBox="0 -1 26 26" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M0 0h24v24H0z" stroke="none"></path>
                    <path d="M3 10a7 7 0 1 0 14 0 7 7 0 1 0-14 0M21 21l-6-6"></path>
                </svg>
            </a>
        </div>
    </nav>
</header>
<style>
    header {
        width: 100vw;
        max-width: 100%;
        height: 3em;
        display: flex;
        align-items: center;
    }
    nav h2 {
        margin: 0;
        font-size: 1.6em;
        padding-left: 0.5em;
    }
    nav h2 a,
    nav h2 a.active {
        text-decoration: none;
    }
    nav {
        width: 100vw;
        max-width: 56em;
        margin: auto;
        display: flex;
        justify-content: space-between;
    }
    nav a {
        fill: var(--black);
        color: var(--black);
        border-bottom: 2px solid transparent;
        text-decoration: none;
    }
    nav .links {
        display: flex;
        font-size: 0.9em;
        padding-right: 0.5em;
    }
    nav .links a {
        display: flex;
        align-items: center;
        margin: 0 0.5em 0 0.5em;
    }
	nav .links a:hover {
		fill: var(--accent);
		color: var(--accent);
	}
    nav .links a svg {
        flex-grow: 1;
    }
    @media (max-width: 720px) {
        nav {
            width: 100vw;
        }
        nav h2 {
            padding: 0.3em;
        }
    }
    @media print {
        header {
            display: none !important;
        }
    }
</style>
